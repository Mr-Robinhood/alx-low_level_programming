CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJ)

$(OBJ):
	$(CC) $(CFLAGS) -c $(SRC)

%.o: %.c m.h
	$(CC) $(CFLAGS) -c -o $@ $<

.PHONY: clean oclean fclean re

clean:
	$(RM) *~ *.swp $(NAME)

oclean:
	$(RM) *.o

fclean: clean oclean

re: fclean all

